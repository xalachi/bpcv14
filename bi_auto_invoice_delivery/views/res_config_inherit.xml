<odoo>
    <data>

        <record id="res_config_auto_invoice_send" model="ir.ui.view">
            <field name="name">res.config.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//t[@groups='account.group_account_user']" position="after">
                    <h2>Auto Invoice Validate</h2>
                    <div class="row mt16 o_settings_container" id="auto_invoice">
                            <div class="col-12 col-lg-6 o_setting_box">

                                <div class="o_setting_left_pane">
                                    <div class="content-group">
                                        
                                        <field name="auto_validate_invoice"  />
                                        
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    
                                    
                                     
                                        <label string="Auto Validate Invoice" for="auto_validate_invoice" />
                                        
                                   
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible' : [('auto_validate_invoice','!=',True)]}">

                                <div class="o_setting_left_pane">
                                    <div class="content-group">
                                        
                                        
                                        <field name="auto_send_mail_invoice"  />
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    
                                    
                                     
                                        
                                        <label string="Auto Send Mail Invoice" for="auto_send_mail_invoice" />
                                        
                                   
                                </div>
                            </div>



                                
                        </div>

                    

                </xpath>
            </field>
        </record>
        
    </data>
</odoo>